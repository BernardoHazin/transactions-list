{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "baseUrl": "./src",
    "paths": {
      "@/tests/*": ["../tests/*"],
      "@/*": ["*"]
    },
    "rootDirs": ["src", "tests"],
    "types": ["node", "jest"],
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": ["src", "tests"],
  "exclude": []
}
